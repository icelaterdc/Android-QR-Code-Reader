<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF1E88E5"
                android:endColor="#FF00C4B4"
                android:angle="135" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33FFFFFF" />
            <corners android:radius="50dp" />
            <size
                android:width="150dp"
                android:height="50dp" />
            <padding
                android:left="20dp"
                android:top="20dp" />
        </shape>
    </item>

    <item
        android:width="60dp"
        android:height="60dp"
        android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFFFF" />
            <stroke
                android:width="2dp"
                android:color="#FF000000" />
            <padding android:all="4dp" />
        </shape>
    </item>
    <item
        android:width="10dp"
        android:height="10dp"
        android:gravity="center|left"
        android:left="20dp"
        android:top="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF000000" />
        </shape>
    </item>
    <item
        android:width="10dp"
        android:height="10dp"
        android:gravity="center|right"
        android:right="20dp"
        android:top="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF000000" />
        </shape>
    </item>
    <item
        android:width="10dp"
        android:height="10dp"
        android:gravity="center|left"
        android:left="20dp"
        android:bottom="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF000000" />
        </shape>
    </item>

    <item
        android:width="70dp"
        android:height="70dp"
        android:gravity="center">
        <shape android:shape="oval">
            <gradient
                android:startColor="#22000000"
                android:endColor="#00000000"
                android:type="radial"
                android:gradientRadius="50dp" />
        </shape>
    </item>
</layer-list>
